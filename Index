<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Collection</title>
    <!-- Use the Inter font from Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <!-- Load Tailwind CSS from CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #1a202c; /* A dark, modern background */
            color: #e2e8f0; /* Light text color */
        }
        /* Style for the game container to ensure it's responsive and full screen */
        #gameContainer {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            display: none; /* Initially hidden */
            z-index: 100; /* Ensure it's on top of other content */
        }
        #gameIframe {
            width: 100%;
            height: 100%;
            border: none;
        }
    </style>
</head>
<body class="flex items-center justify-center min-h-screen p-4 md:p-8">

    <!-- Game Launcher View - Initially Visible -->
    <div id="launcher" class="flex flex-col items-center justify-center space-y-8 max-w-4xl w-full">
        <h1 class="text-4xl md:text-5xl font-bold text-center mb-6 text-indigo-400 drop-shadow-md">Collection</h1>
        
        <!-- Game List Container -->
        <div id="gameList" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 w-full">
            
            <!-- Game Card for Ability Warriors -->
            <div id="abilityWarriorsCard" class="bg-gray-800 rounded-3xl overflow-hidden shadow-2xl transition-all hover:scale-105 duration-300 cursor-pointer">
                <div class="relative pb-[56.25%] overflow-hidden">
                    <!-- The new image for the game icon, assuming it's in the same directory -->
                    <img src="Hakari.png"
                         alt="A screenshot of the game Ability Warriors"
                         class="absolute w-full h-full object-cover transform scale-100 transition-transform duration-300 hover:scale-110"
                         draggable="false">
                </div>
                <div class="p-6 text-center">
                    <h2 class="text-xl md:text-2xl font-semibold text-gray-200">Ability Warriors</h2>
                    <p class="text-gray-400 text-sm mt-1">A fast-paced action game.</p>
                </div>
            </div>

            <!-- You can add more game cards here. Just copy the div above. -->
            
        </div>
    </div>

    <!-- Game Container View - Initially Hidden -->
    <div id="gameContainer">
        <div class="relative w-full h-full">
            <!-- Back Button to return to the game list -->
            <button id="backButton" class="absolute top-4 left-4 z-50 p-2 bg-gray-700 hover:bg-gray-600 text-gray-200 rounded-full shadow-lg transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-gray-500">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
            </button>
            <iframe id="gameIframe" src="" allowfullscreen></iframe>
        </div>
    </div>
    
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const launcher = document.getElementById('launcher');
            const gameContainer = document.getElementById('gameContainer');
            const gameIframe = document.getElementById('gameIframe');
            const backButton = document.getElementById('backButton');
            const abilityWarriorsCard = document.getElementById('abilityWarriorsCard');

            // Game data for easier management
            const games = {
                'abilityWarriors': 'https://jaxonpino.github.io/AbilityWarriors/'
            };

            /**
             * Handles the click on a game card.
             * @param {string} gameId The ID of the game to load.
             */
            function loadGame(gameId) {
                // Get the URL from the games object
                const gameUrl = games[gameId];
                if (gameUrl) {
                    // Hide the launcher and show the game container
                    launcher.classList.add('hidden');
                    gameContainer.style.display = 'block'; // Use 'block' for full screen
                    
                    // Set the iframe's source to the game URL
                    gameIframe.src = gameUrl;
                } else {
                    console.error('Game not found:', gameId);
                }
            }

            /**
             * Returns to the main game launcher view.
             */
            function goBack() {
                // Hide the game container and show the launcher
                gameContainer.style.display = 'none';
                launcher.classList.remove('hidden');
                
                // Unload the iframe content to stop the game
                gameIframe.src = '';
            }

            // Add event listener to the game card
            abilityWarriorsCard.addEventListener('click', () => {
                loadGame('abilityWarriors');
            });

            // Add event listener to the back button
            backButton.addEventListener('click', goBack);
        });
    </script>
</body>
</html>
